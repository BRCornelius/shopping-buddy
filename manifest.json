{
    "name": "Shopping Buddy",
    "version": "1.0.0",
    "description": "Find ways to book with your points",
    "permissions": [
        "activeTab",
        "<all_urls>",
        "tabs"
    ],
    "background": {
        "page": "popup.html",
        "persistant": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_icon": "assets/amex-icon.png",
        "icons": {
            "16": "assets/amex-icon.png",
            "24": "assets/amex-icon.png",
            "32": "assets/amex-icon.png",
            "48": "assets/amex-icon.png",
            "128": "assets/amex-icon.png"
        }
    },
    "manifest_version": 2
}