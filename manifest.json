{
    "name": "Shopping Buddy",
    "version": "1",
    "description": "Find ways to book with your points",
    "permissions": [
        "activeTab",
        "<all_urls>",
        "tabs"
    ],
    "background": {
        "page": "popup.html",
        "persistant": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["popup.js"],
            "run_at": "document_end"
        }
    ],
    "manifest_version": 2
}